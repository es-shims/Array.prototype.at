{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"id-length": 0,
		"new-cap": [2, {
			"capIsNewExceptions": [
				"Get",
				"LengthOfArrayLike",
				"RequireObjectCoercible",
				"ToIntegerOrInfinity",
				"ToObject",
				"ToString",
			],
		}],
	},

	"overrides": [
		{
			"files": "**/*.mjs",
			"rules": {
				"no-restricted-exports": 0,
			},
		},
	],
}
